#!/bin/sh
###################################################################
#
# CBR
#
# Programmed by: Tim Racinsky        Date: July, 1993
# Copyright (c) 1993 David Huron
#
# Modifications:
#   Date:      Programmer:       Description:
# June 7/94	Tim Racinsky	Added getopts command
#
#
# 	This shell program is used to invoke the awk program cbr.awk.
#
FILENAME=""
HELP=""
FLAG=""
STNDIN=""
X_OPTION=""
PVALUE=""
USAGE1="USAGE: cbr -h                (Help Screen)"
USAGE2="       cbr [-p n] [-x] [file ...]"

if [ -z $AWK_VER ]
then
   AWK_VER=`which awk`
   if [ -z $AWK_VER ]
   then
      AWK_VER=`which gawk`
   fi
   if [ -z $AWK_VER ]
   then
      exit 1
   fi
fi

if [ -z $HUMDRUM ]
then
   HUMDRUM=`echo $PATH | tr : '\n' | grep 'humdrum/bin$' | head -n 1 | sed 's/\/bin$//'`
fi

# 
while getopts hp:x arg
do
	case "$arg" in
	h) 	HELP="ON";;
	p) 	PVALUE="${OPTARG}";;
	x) 	X_OPTION="x";;
     [?]) echo "" 1>&2
		echo "$USAGE1" 1>&2
		echo "$USAGE2" 1>&2
		exit ;;
	esac
done
shift `expr $OPTIND - 1`
# If no parameters were specified, print out a help screen
if [ -n "$HELP" ]
then
	if [ -f ${HUMDRUM}/bin/helpscrn/cbr.hlp ]
	then
		cat ${HUMDRUM}/bin/helpscrn/cbr.hlp
	else
		echo "No help available on this command."
	fi
	exit
fi
# Process any remaining filenames
while [ "$#" -ne 0 ]
do
	# A '-' specifies standard input
	if [ x"$1" = x- ]
	then
		# Only one '-' may be used
		if [ -z "$STNDIN" ]
		then
			FILENAME="$FILENAME $1"
			STNDIN="ON"
			shift
		else
			shift
		fi
	elif [ -f "$1" ]
	then
		FILENAME="$FILENAME $1"
		shift
	else
		echo "cbr: ERROR: File not found: $1" 1>&2
		FLAG="ON"
		shift
	fi
done	
# If only invalid files specified, exit
if [ "X$FILENAME" = X -a -n "$FLAG" ]
then
	exit
fi	
if [ -z $FILENAME ]
then
   FILENAME="-"
fi 
if [ "X$X_OPTION" = X ]
then
	$AWK_VER -f ${HUMDRUM}/bin/cbr.awk "DUMMY" "${PVALUE:-null}" $FILENAME
else
	$AWK_VER -f ${HUMDRUM}/bin/x_option.awk "DUMMY" $FILENAME | $AWK_VER -f ${HUMDRUM}/bin/cbr.awk "DUMMY" "${PVALUE:-null}" -
fi
